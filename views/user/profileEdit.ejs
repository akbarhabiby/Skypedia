	<title>Profile <%= data.fullName(data.first_name, data.last_name) %> </title>

	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <link href="/css/style.css" rel="stylesheet">

	<style>
		body {
			display: flex;
			min-height: 100vh;
			flex-direction: column;
		}

		main {
			flex: 1 0 auto;
		}

		form div {
			margin-bottom: 1rem;
		}

		form label {
			font-size: 1rem;
			color: inherit;
		}

		img {
			max-width: 200px;
		}
	</style>
</head>

<body>
	<div class="navbar-fixed" style="margin-bottom: 2rem;">
		<nav class="green" role="navigation">
			<div class="nav-wrapper container">
				<a href="/" class="brand-logo">Skypedia</a>
				<ul class="right hide-on-med-and-down">
					<li><a href="/user/history">History Perjalanan Kamu</a></li>
					<li><a href="/user">Profil Kamu</a></li>
					<li><a href="/logout" onclick="return confirm('Kamu yakin mau logout?');">Logout</a></li>
				</ul>
				<a href="javascript: void(0);" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
			</div>
		</nav>
	</div>

<main class="container">
	<h4>Edit Profil</h4>
	<% if (err) { %>
		<blockquote>
			<%= err %>
		</blockquote>
	<% } %> 
		<div class="section">
			<form action="/user/edit" method="POST">
				<div>
					<label>Nama Depan</label>
					<input type="text" name="first_name" placeholder="e.g: Shin" value="<%= data.first_name %>">
				</div>
				<div>
					<label>Nama Belakang</label>
					<input type="text" name="last_name" placeholder="e.g: Yuna" value="<%= data.last_name %>">
				</div>
				<div>
					<label>Email</label>
					<input type="text" name="email" placeholder="e.g: shinyuna@itzy.co.kr" value="<%= data.email %>" disabled>
					<span>Email tidak dapat diganti, silahkan hubungi CS</span>
				</div>
				<div class="" style="margin-top: 2rem;">
                    <button type="submit" class="waves-effect waves-light btn green">Simpan Perubahan</button>
                    <a href="/user"class="waves-effect waves-light btn red">Kembali</a>
				</div>
			</form>
		</div>
</main>

